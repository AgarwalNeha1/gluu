<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >

<suite name="UpdateProfile Tests" verbose="2" parallel="false">
	<!-- Load testing data -->
	<test name="Site 1.0. Load test LDAP data" enabled="true">
		<classes>
			<class name="org.gluu.site.action.test.util.LoadTestingDataTest" />
		</classes>
	</test>

   <test name="Site 1.0. Update Profile of user having non Administrator Role">
    <parameter name="updateUserPropsKey" value="testUpdateProfile.user" />
     <classes>
       <class name="org.gluu.site.action.test.UserProfileTest"/>       
     </classes>
   </test>	

	<!-- Cleanup testing data -->
	<test name="Site 1.0. Cleanup test LDAP data" enabled="true">
		<classes>
			<class name="org.gluu.site.action.test.util.CleanupTestingDataTest" />
		</classes>
	</test>
</suite>
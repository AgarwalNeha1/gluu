<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >

<suite name="Site 1.0 Login Tests" verbose="2" parallel="false">
	<!-- Load testing data -->
	<test name="Site 1.0: Load test LDAP data" enabled="true">
		<classes>
			<class name="org.gluu.site.action.test.util.LoadTestingDataTest" />
		</classes>
	</test>

	<test name="Site 1.0: Login with user which has role Administrator" enabled="true">
		<parameter name="userPropsKey" value="test.login.user.administrator" />
		<classes>
			<class name="org.gluu.site.action.test.LoginTest" />
		</classes>
	</test>

	<!-- Cleanup testing data -->
	<test name="Site 1.0: Cleanup test LDAP data" enabled="true">
		<classes>
			<class name="org.gluu.site.action.test.util.CleanupTestingDataTest" />
		</classes>
	</test>
</suite>

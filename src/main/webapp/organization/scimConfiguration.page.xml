<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
       no-conversation-view-id="/home.xhtml" login-required="true"
       view-id="/organization/scimConfiguration.xhtml">

    <restrict>#{s:hasPermission('configuration', 'access')}</restrict>

    <begin-conversation join="true" flush-mode="manual" nested="true"/>
    <action execute="#{scimConfigureAction.init}" on-postback="false"/>

    <rewrite pattern="/organization/scim" />

    <navigation from-action="#{scimConfigureAction.init}">
        <rule if-outcome="no_permissions">
            <end-conversation/>
               <redirect view-id="/home.xhtml">
                <message severity="ERROR">You don't have permissions to modify SCIM configuration</message>
            </redirect>
           </rule>

        <rule if-outcome="disabled">
            <end-conversation/>
               <redirect view-id="/home.xhtml">
                <message severity="ERROR">SCIM doesn't enabled on this server</message>
            </redirect>
           </rule>

        <rule if-outcome="failure">
            <end-conversation/>
               <redirect view-id="/home.xhtml">
                <message severity="ERROR">Failed to prepare form for SCIM configuration update</message>
               </redirect>
           </rule>
    </navigation>

    <navigation from-action="#{scimConfigureAction.update}">
        <rule if-outcome="success">
            <end-conversation/>
            <redirect view-id="/organization/updateOrganization.xhtml">
                <message severity="INFO">SCIM configuration updated</message>
            </redirect>
        </rule>
    </navigation>

    <navigation from-action="#{scimConfigureAction.cancel}">
        <end-conversation/>
        <redirect view-id="/organization/updateOrganization.xhtml">
            <message severity="INFO">SCIM configuration update canceled</message>
        </redirect>
    </navigation>

</page>

<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
    login-required="false" no-conversation-view-id="/home.xhtml"
    view-id="/federation/hosted/addFederation.xhtml">

    <restrict>#{s:hasPermission(applianceService.appliance, 'federationHostingEnabled')}</restrict>

    <action execute="#{joinFederationAction.add}" if="#{joinFederationAction.federationProposal == null}" on-postback="false" />

    <rewrite pattern="/federation/hosted/add" />

    <navigation from-action="#{joinFederationAction.add}">
        <rule if-outcome="success">
            <begin-conversation join="true" flush-mode="manual" />
            <render view-id="/federation/hosted/addFederation.xhtml"/>
        </rule>

        <rule if-outcome="no_permissions">
            <end-conversation />
            <redirect view-id="/home.xhtml">
                <message severity="ERROR">You don't have permissions to modify federation</message>
            </redirect>
        </rule>

        <rule if-outcome="failure">
            <end-conversation />
            <redirect view-id="/federation/proposal/proposalsInventory.xhtml">
                <message severity="ERROR">Failed to add federation</message>
            </redirect>
        </rule>
    </navigation>

    <navigation from-action="#{joinFederationAction.save(_isFederation)}">
        <rule if-outcome="success">
            <redirect view-id="/federation/proposal/viewProposal.xhtml">
                <message severity="INFO">Federation '#{joinFederationAction.federationProposal.displayName}' added successfully</message>
                <param name="inum" value="#{joinFederationAction.inum}" />
            </redirect>
        </rule>

        <rule if-outcome="failure">
            <end-conversation />
            <redirect view-id="/federation/proposal/proposalsInventory.xhtml">
                <message severity="INFO">Federation '#{joinFederationAction.federationProposal.displayName}' was not added</message>
            </redirect>
        </rule>
    </navigation>

    <navigation from-action="#{joinFederationAction.cancel}">
        <end-conversation />
        <redirect view-id="/federation/proposal/proposalsInventory.xhtml">
            <message severity="INFO">Federation was not added</message>
        </redirect>
    </navigation>

</page>
